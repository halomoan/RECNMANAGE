<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		contentWidth="500px"
		contentHeight="320px"
		placement="Bottom" >
		<NavContainer
			id="navCon">
			<Page
				id="overview"
				title="{i18n>Dialog.Selection.BP}">
				<List id="listBP" mode="Delete" delete="onBPDelete">
				</List>
				<footer>
					<Toolbar>
						<MenuButton text="{= ${viewModel>\addMainBP} ? 'Add Main Customer' : 'Add Other Contact'}" buttonMode="Split" type="Accept" defaultAction="onBPAdd" useDefaultActionOnly="true">
						<menu>
							<Menu itemSelected="onBPAdd">
								<items>
									<MenuItem text="Add Main Customer" icon="sap-icon://edit"/>
									<MenuItem text="Add Other Contact" icon="sap-icon://edit"/>
								</items>
							</Menu>
						</menu>
					</MenuButton>
						<ToolbarSpacer/>
						<Button
							text="{i18n>Common.Dialog.Close}"
							press="onBPClose" />
					</Toolbar>
				</footer>
			</Page>
			<Page
				id="detail"
				showNavButton="true"
				navButtonPress="onBPNavBack"
				title="Product">
				<ObjectHeader
					title="{Name}" >
					<attributes>
						<ObjectAttribute text="{WeightMeasure} {WeightUnit}" />
						<ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />
						<ObjectAttribute text="{Description}" />
					</attributes>
				</ObjectHeader>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>
<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core" xmlns="sap.m"
          xmlns:smartForm="sap.ui.comp.smartform"
          xmlns:smartField="sap.ui.comp.smartfield"
          width="100%">

    <smartForm:SmartForm
            id="termsForm"
            editTogglable="false"
            width="100%"
            editable="false"
            useHorizontalLayout="true"
            layout="ResponsiveLayout">

        <smartForm:Group >
            <smartForm:GroupElement>
                <smartField:SmartField value="{Recnbeg}" >
                    <smartField:configuration>
                        <smartField:Configuration controlType="datePicker"/>
                    </smartField:configuration>
                </smartField:SmartField>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Recnend1st}">
                    <smartField:configuration>
                        <smartField:Configuration controlType="datePicker"/>
                    </smartField:configuration>
                </smartField:SmartField>
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField value="{Recnendabs}">
                    <smartField:configuration>
                        <smartField:Configuration controlType="datePicker"/>
                    </smartField:configuration>
                </smartField:SmartField>
            </smartForm:GroupElement>
        </smartForm:Group>
        <smartForm:Group >
            <smartForm:GroupElement>
                <smartField:SmartField value="{Xpestate}" />
            </smartForm:GroupElement>
        </smartForm:Group >
    </smartForm:SmartForm>
</mvc:View>
